{
  "name": "greenpeace/planet4-child-theme-nordic",
  "description": "Planet4 Child theme for GP Nordic",
  "type":"wordpress-theme",
  "minimum-stability" : "stable",
  "license": "GPL-3.0+",
  "authors": [
    {
      "name": "Greenpeace Nordic",
      "email": "svilena.koleva@greenpeace.org"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://packagist.org"
    }
  ],
  "support": {
    "issues": "https://github.com/greenpeace/planet4-child-theme-nordic/issues",
    "wiki": "https://github.com/greenpeace/planet4-child-theme-nordic/wiki",
    "source": "https://github.com/greenpeace/planet4-child-theme-nordic"
  },
  "extra": {
    "installer-paths": {
      "vendor/plugins/{$name}/": ["type:wordpress-plugin"]
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^2.3.0",
    "slevomat/coding-standard": "~8.8",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "laminas/laminas-dom": "^2.12",
    "phpunit/phpunit": "^7.5||^9.5",
    "wpackagist-plugin/timber-library": "1.22.*",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "scripts": {
    "fixes": "vendor/bin/phpcbf",
    "sniffs": "vendor/bin/phpcs"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "timber/timber": "^2.2"
  }
}
